<Window x:Class="WpfApplication6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Grow" HorizontalAlignment="Left" Height="36" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="Up" HorizontalAlignment="Left" Height="36" Margin="393,10,0,0" VerticalAlignment="Top" Width="77" Click="button1_Click"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="258" Margin="10,51,0,0" VerticalAlignment="Top" Width="460" Background="#FFA4A2A2"/>
        <Button x:Name="button2" Content="Shrink" HorizontalAlignment="Left" Height="36" Margin="90,10,0,0" VerticalAlignment="Top" Width="72" Click="button2_Click"/>
        <Button x:Name="button3" Content="Down" HorizontalAlignment="Left" Height="36" Margin="312,10,0,0" VerticalAlignment="Top" Width="76" Click="button3_Click"/>
        <Button x:Name="button4" Content="New" HorizontalAlignment="Left" Height="36" Margin="193,10,0,0" VerticalAlignment="Top" Width="85" Background="#FF25F71B" Click="button4_Click"/>

    </Grid>
</Window>
